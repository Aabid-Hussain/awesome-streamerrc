{
  "languageserver": {
    "dockerfile": {
      "args": ["--stdio"],
      "command": "docker-langserver",
      "filetypes": ["dockerfile"]
    },
    "golang": {
      "command": "gopls",
      "disableWorkspaceFolders": true,
      "filetypes": ["go"],
      "rootPatterns": ["go.mod"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    }
  }
}
